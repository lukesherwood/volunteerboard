<%= simple_form_for [@event] do |f| %>
    <%= f.input :name %>
    <%= f.input :date, value: Time.now %>
    <%= f.input :location %>
    <%= f.input :information %>
    <%= f.association :organisation%>
    <h4>Event Jobs:</h4>
    <div class='jobs'>
    <%= link_to_add_association 'Add Job', f, :jobs, data: { association_insertion_node: '.jobs', association_insertion_method: :append }, class:"btn btn-outline-primary"   %>
        <%= f.simple_fields_for :jobs do |job| %>
            <%= render 'job_fields', f: job %>
        <% end%>
    </div>
    <%= f.button :submit, class:"btn btn-primary" %>
<% end%>
 