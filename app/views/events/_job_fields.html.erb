<div class='nested-fields'>
    <%= f.input :title, label:"Job Title"%>
    <%= f.input :description, as: :text, label:"Job Description" %>
    <%= f.input :assigned, as: :radio_buttons, default: false %>
    <%= f.association :volunteer, hint: "If assigned then who is this job assigned to?" %>
    <%= link_to_remove_association "Remove job", f, class:"btn btn-outline-danger" %>
</div>