<h1>Events</h1>
<br>
<%= link_to "Create a new event", new_event_path, class:"btn btn-outline-primary btn-sm" if user_signed_in? && current_user.organisation %>
<% if @events.empty? %>
<br>
<br>
    <p>Sorry we don't have any events right now</p>
<% else%>
    <ul class="list-group">
        <% @events.each do |event|%>
            <li class="list-group-item"> 
            <%= render 'display_event', event: event %> 
            <% if current_user == event.organisation.owner%>
                <div class="btn-group">
                <%= link_to "Edit Event", edit_event_path(event), class:"btn btn-outline-warning btn-sm" %> <br>
                <%= link_to "Delete Event", event_path(event), method: "DELETE", data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %>
                </div>
            <% end%>
            </li>
        <% end%>
    </ul>
<% end%>


