<h1>Events</h1>

<ul><% @events.each do |event|%>
    <div><li>
    <h1><%= event.name %></h1>
    <h3>by: <%= event.organisation.name %></h3>
    
    <p><%= event.datetime %></p>
    
    <p><%= event.location %> </p>
    
    <p><%= event.information %></p>
    <div><h4>Jobs:</h4>
    <ul><% event.jobs.each do |job| %>
            <li><%= link_to job.title, organisation_event_job_path(@organisation, event, job) %> </li>
        <% end%>
    </ul>
    </div>
    </li>
<% end%>
</div>
</ul>

