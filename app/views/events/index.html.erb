<h1>Events</h1>
<br>
<%= link_to "Create a new event", new_event_path, class:"btn btn-outline-primary btn-sm" if user_signed_in? && current_user == @organisation.owner%>
<ul><% @events.each do |event|%>
    <div><li>
    <%= render 'display_event', event: event %> 
    <% if user_signed_in? && current_user == event.organisation.owner%>
    <%= link_to "Edit Event", edit_event_path(event), class:"btn btn-outline-warning btn-sm" %> <br>
    <%= link_to "Delete Event", event_path(event), method: "DELETE", data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %>
    <% end%>
    </li>
<% end%>
</div>
</ul>


