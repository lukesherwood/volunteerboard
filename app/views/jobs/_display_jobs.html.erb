 <ul class="list-group">
    <% jobs.each do |job|%>
        <li class="list-group-item"> 
            <h3><%= link_to job.title, event_job_path(job.event, job) %> 
            <% if job.assigned%>
                <span class="badge badge-pill badge-secondary">Assigned</span></h3>
            <% end %>
            <p><%= job.description %></p>
            <% if current_user == job.organisation.owner %>
             <%= link_to "Delete Job", event_job_path(job.event, job), method:"DELETE", data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %> <br>
             <%= link_to "Edit Job", edit_event_job_path(job.event, job), class:"btn btn-outline-warning btn-sm" %>
             <% end%>
        </li>
    <% end%>

    </ul>