<h1>Create a New Job</h1>

<%= simple_form_for [@job] do |f| %>
  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.input :assigned, as: :radio_buttons, default: 0%>
  <%= f.association :volunteer, hint: "If assigned then who is this job assigned to?" %>
  <%= f.button :submit, value: "Create Job" %>
<% end %>