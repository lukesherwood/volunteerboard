<h1>Organisations</h1>
<ul>
    <% @orgs.each do |org|%>
        <li>
        <h2><%= link_to org.name, organisation_path(org.slug) %> </h2>
        <h4><%= org.location %> </h4>
        <p><%= org.mission %> </p>
        <%= link_to "Edit Organisation", edit_organisation_path(org.slug) if current_user == org.owner%>
        </li>
    <% end%>
</ul>

