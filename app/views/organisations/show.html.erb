 <h1><%= @organisation.name %> </h1>

 <h3><%= @organisation.location %></h3>

 <p><%= @organisation.mission %></p>

 <h3>Events:</h3>
    <ul><% @organisation.events.each do |event|%>
        <li>
        <h4><%= link_to event.name, organisation_event_path(@organisation, event) %></h4>
        <p><%= event.location %><br>
        <%= event.datetime %></p>
        <p><%= event.information %></p>
        </li>
    <% end%>
    </ul> 
<%= link_to "Create New Event", new_organisation_event_path(@organisation) %>