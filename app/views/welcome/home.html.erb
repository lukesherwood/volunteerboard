<h2>Welcome to the Volunteer Board</h2>

<p>Check out our upcoming events</p>
<ul>
<% @events.each do |event|%>
<li>
<h1><%= event.name %></h1>
<h3>by: <%= event.organisation.name %></h3>
<br>
<%= event.organisation.mission %>
<br>
<%= event.date %>
<br>
<%= event.location %>
<br>
<%= event.information %>

<% event.jobs.each do |job| %>
<%= link_to job.title, job_path(job) %>
<% end%>
</li>
<% end%>

</ul>